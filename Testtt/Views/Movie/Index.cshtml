@model IEnumerable<Testtt.Models.MoviViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button class="btn btn-primary" asp-action="Create">Create New Movie</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iddescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th><th>
                @Html.DisplayNameFor(model => model.RatingDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iddescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td><td>
                @Html.DisplayFor(modelItem => item.RatingDescription)
            </td>
            <td>
	            <button type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
	            <button type="button" class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</button>
                <button type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
